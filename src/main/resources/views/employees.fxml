<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.EmployeeController"
            prefWidth="800.0" prefHeight="520.0">

    <top>
        <HBox spacing="10" style="-fx-padding: 12 16; -fx-background-color: #f2f2f2;">
            <children>
                <Label text="Employees" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="nameField" promptText="Name" prefWidth="180"/>
                <TextField fx:id="roleField" promptText="Role" prefWidth="140"/>
                <Button text="Add" onAction="#addEmployee"/>
            </children>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" pannable="true">
            <content>
                <ListView fx:id="employeeListView" prefWidth="780" prefHeight="420"/>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="0" style="-fx-background-color: #e9e9e9;">
            <children>
                <Button text="Checkout"     onAction="#goToCheckout"
                        prefWidth="266" prefHeight="40" style="-fx-background-radius: 0;" />
                <Button text="Manager View" onAction="#goToManagerView"
                        prefWidth="266" prefHeight="40" style="-fx-background-radius: 0;" />
                <Button text="Inventory"    onAction="#goToInventory"
                        prefWidth="268" prefHeight="40" style="-fx-background-radius: 0;" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
