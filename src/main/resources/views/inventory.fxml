<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.InventoryController"
            prefWidth="800.0" prefHeight="520.0">


    <top>
        <HBox spacing="10" style="-fx-padding: 12 16; -fx-background-color: #f2f2f2;">
            <children>
                <Label text="Inventory" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </top>


    <center>
        <ScrollPane fitToWidth="true" pannable="true">
            <content>
                <VBox fx:id="inventoryList" spacing="8">
                    <padding><Insets topRightBottomLeft="12"/></padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>


    <bottom>
        <HBox spacing="0" style="-fx-background-color: #e9e9e9;">
            <children>
                <Button text="Checkout"     onAction="#goToCheckout"
                        prefWidth="266" prefHeight="40" style="-fx-background-radius: 0;" />
                <Button text="Order History" onAction="#goToOrderHistory"
                        prefWidth="266" prefHeight="40" style="-fx-background-radius: 0;" />
                <Button text="Inventory"    onAction="#goToInventory"
                        prefWidth="268" prefHeight="40" style="-fx-background-color: white; -fx-background-radius: 0;" />
            </children>
        </HBox>
    </bottom>
</BorderPane>









